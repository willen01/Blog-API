{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./src",                                   
    "outDir": "build",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "strictNullChecks": false,                                 
  },
  "exclude": [
    "./jest.config.ts",
    "./node_modules",
    "./tests",
    "./dist"
  ]
}
